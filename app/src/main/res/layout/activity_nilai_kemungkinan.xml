<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/simpleminimalis">

    <TableLayout
        android:layout_width="414dp"
        android:layout_height="236dp"
        android:gravity="center_horizontal"
        android:paddingTop="20dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Baris 1 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#CCCCCC">

            <!-- Kolom 1 -->
            <TextView
                android:layout_weight="1"
                android:padding="5dp"
                android:text="Tingkat Persentase"
                android:textStyle="bold" />

            <!-- Kolom 2 -->
            <TextView
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="Nilai Kemungkinan"
                android:textAlignment="center"
                android:textStyle="bold" />
        </TableRow>

        <!-- Baris 2 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF">

            <!-- Kolom 1 -->
            <TextView
                android:layout_weight="1"
                android:padding="5dp"
                android:text="0% - 50%"
                android:textStyle="bold" />

            <!-- Kolom 2 -->
            <TextView
                android:layout_weight="1"
                android:padding="5dp"
                android:text="Sedikit kemungkinan / kemungkinan kecil"
                android:textStyle="bold" />
        </TableRow>

        <!-- Baris 3 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#CCCCCC">

            <!-- Kolom 1 -->
            <TextView
                android:layout_weight="1"
                android:padding="5dp"
                android:text="51% - 79%"
                android:textStyle="bold" />

            <!-- Kolom 2 -->
            <TextView
                android:layout_weight="1"
                android:padding="5dp"
                android:text="Kemungkinan"
                android:textStyle="bold" />
        </TableRow>

        <!-- Baris 4 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF">

            <!-- Kolom 1 -->
            <TextView
                android:layout_weight="1"
                android:padding="5dp"
                android:text="80% - 99%"
                android:textStyle="bold" />

            <!-- Kolom 2 -->
            <TextView
                android:layout_weight="1"
                android:padding="5dp"
                android:text="Kemungkinan Besar"
                android:textStyle="bold" />
        </TableRow>

        <!-- Baris 5 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#CCCCCC">

            <!-- Kolom 1 -->
            <TextView
                android:layout_weight="1"
                android:padding="5dp"
                android:text="100%"
                android:textStyle="bold" />

            <!-- Kolom 2 -->
            <TextView
                android:layout_weight="1"
                android:padding="5dp"
                android:text="Sangat Yakin"
                android:textStyle="bold" />
        </TableRow>

    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>