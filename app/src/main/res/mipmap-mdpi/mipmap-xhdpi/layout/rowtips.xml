<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="wrap_content" app:cardCornerRadius="5dp" app:cardElevation="3dp" app:cardUseCompatPadding="true">
    <RelativeLayout android:id="@+id/linear" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:background="#00000000" android:layout_width="25dp" android:layout_height="25dp" android:layout_marginTop="14dp" android:layout_marginRight="14dp" android:src="@drawable/ic_keyboard_arrow_down_black_24dp" android:layout_alignParentRight="true"/>
        <TextView android:textSize="22sp" android:textColor="#000000" android:id="@+id/code_name" android:padding="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Code Name" android:fontFamily="@font/boogalo_regular"/>
        <RelativeLayout android:id="@+id/expendable_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/code_name">
            <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="#a9a9a9" android:id="@+id/version" android:padding="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Version"/>
            <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="#a9a9a9" android:id="@+id/api_level" android:padding="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="api level" android:layout_alignParentRight="true"/>
            <TextView android:textSize="18sp" android:textColor="#a9a9a9" android:id="@+id/deskripsi" android:padding="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="Deskripsi" android:layout_below="@+id/version" android:layout_centerHorizontal="true" android:textAlignment="textStart"/>
        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
