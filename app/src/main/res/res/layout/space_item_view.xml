<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@drawable/white_ripple" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:id="@+id/main_content" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
        <ImageView android:id="@+id/space_icon" android:layout_width="@dimen/space_item_icon_default_size" android:layout_height="@dimen/space_item_icon_default_size"/>
        <TextView android:textSize="@dimen/space_item_text_default_size" android:layout_gravity="center_vertical" android:id="@+id/space_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:lines="1"/>
    </LinearLayout>
    <RelativeLayout android:id="@+id/badge_container" android:visibility="gone" android:layout_width="16dp" android:layout_height="16dp" android:layout_marginLeft="@dimen/badge_left_margin" android:layout_marginTop="3dp" android:layout_marginRight="2dp" android:layout_toRightOf="@+id/main_content" android:layout_alignParentTop="true">
        <TextView android:textSize="10sp" android:textStyle="bold" android:textColor="@android:color/white" android:id="@+id/badge_text_view" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
    </RelativeLayout>
</RelativeLayout>
